{
  "name": "boilreact",
  "version": "1.0.0",
  "description": "My own opinionated boilerplate for react apps",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "webpack --config webpack.production.config.js && npm run build:html",
    "build:html": "cp assets/index.html public/index.html",
    "dev:build": "webpack --config webpack.development.config.js --progress --colors && npm run build:html",
    "dev:start": "webpack-dev-server --port 8082 --hot --quiet --inline --config webpack.development.config.js"
  },
  "author": "Besart Hoxhaj",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "bluebird": "^3.3.4",
    "hapi": "^13.2.2",
    "inert": "^3.2.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "react-redux": "^4.4.1",
    "redux": "^3.3.1",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "devDependencies": {
    "nock": "^7.2.1",
    "tape": "^4.2.2"
  }
}
